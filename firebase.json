{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      { "source": "/team", "destination": "/team.html" },
      { "source": "/sponsors", "destination": "/sponsors.html" },
      { "source": "/become-sponsor", "destination": "/become-sponsor.html" },
      { "source": "/photos", "destination": "/photos.html" },
      { "source": "/contact", "destination": "/contact.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
